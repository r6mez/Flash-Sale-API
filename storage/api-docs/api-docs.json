{
    "openapi": "3.0.0",
    "info": {
        "title": "Flash Sale API",
        "description": "API documentation for the Flash Sale application. This API handles product inventory management, stock holds, orders, and payment webhooks for flash sale events.",
        "contact": {
            "name": "API Support",
            "email": "support@example.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/products/{id}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Get a product by ID",
                "description": "Retrieves product details including current stock level. Results are cached for 60 seconds.",
                "operationId": "61cf2ecc2d0c9260c8038464500c554c",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Product ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Product found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Product not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Product not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "servers": [
                    {
                        "url": "/api",
                        "description": "API Server"
                    }
                ]
            }
        },
        "/holds": {
            "post": {
                "tags": [
                    "Holds"
                ],
                "summary": "Create a stock hold",
                "description": "Creates a temporary hold on product stock. The hold expires after 2 minutes. Stock is decremented immediately and will be restored if the hold expires without an order being placed.",
                "operationId": "93936385e0f0106de2fa94dd276e3b90",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "product_id",
                                    "qty"
                                ],
                                "properties": {
                                    "product_id": {
                                        "description": "ID of the product to hold",
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "qty": {
                                        "description": "Quantity to hold (minimum 1)",
                                        "type": "integer",
                                        "example": 2
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Hold created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "properties": {
                                                "hold": {
                                                    "description": "Hold ID",
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "expire_at": {
                                                    "description": "Hold expiration time",
                                                    "type": "string",
                                                    "format": "date-time"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Product not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Product not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Insufficient stock",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Out of stock"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The product_id field is required."
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "servers": [
                    {
                        "url": "/api",
                        "description": "API Server"
                    }
                ]
            }
        },
        "/orders": {
            "post": {
                "tags": [
                    "Orders"
                ],
                "summary": "Create an order from a hold",
                "description": "Converts a valid hold into an order. The hold must not be expired. Once an order is created, the hold is deleted and the order enters 'pending' status awaiting payment confirmation via webhook.",
                "operationId": "5aa73ad66d9d7a5e3f156b5c37a975d5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "hold_id"
                                ],
                                "properties": {
                                    "hold_id": {
                                        "description": "ID of the hold to convert to an order",
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Order created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/Order"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "410": {
                        "description": "Hold expired",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Hold expired"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The hold_id field is required."
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "servers": [
                    {
                        "url": "/api",
                        "description": "API Server"
                    }
                ]
            }
        },
        "/payments/webhook": {
            "post": {
                "tags": [
                    "Webhooks"
                ],
                "summary": "Handle payment webhook",
                "description": "Receives payment status updates from the payment provider. Uses idempotency keys to prevent duplicate processing. If payment succeeds, the order is marked as 'paid'. If payment fails, the order is cancelled and stock is restored. Supports early webhook arrival (before order creation) by queuing for later processing.",
                "operationId": "c13195ed22d255b7a7e5a136e52c3a2a",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "idempotency_key",
                                    "order_id",
                                    "status"
                                ],
                                "properties": {
                                    "idempotency_key": {
                                        "description": "Unique key to prevent duplicate webhook processing",
                                        "type": "string",
                                        "example": "pay_abc123xyz"
                                    },
                                    "order_id": {
                                        "description": "ID of the order this payment is for",
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "status": {
                                        "description": "Payment status",
                                        "type": "string",
                                        "enum": [
                                            "success",
                                            "failure"
                                        ],
                                        "example": "success"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Webhook processed successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Payment successful, order marked as paid"
                                        },
                                        "order_id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "order_status": {
                                            "type": "string",
                                            "example": "paid"
                                        },
                                        "idempotency_key": {
                                            "type": "string",
                                            "example": "pay_abc123xyz"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "202": {
                        "description": "Order not yet created, webhook queued for later processing",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Order not found, webhook recorded for later processing"
                                        },
                                        "idempotency_key": {
                                            "type": "string",
                                            "example": "pay_abc123xyz"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The idempotency_key field is required."
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "servers": [
                    {
                        "url": "/api",
                        "description": "API Server"
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Product": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Flash Sale Item"
                    },
                    "price_cents": {
                        "type": "integer",
                        "example": 9999
                    },
                    "stock": {
                        "type": "integer",
                        "example": 100
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Hold": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "product_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "qty": {
                        "type": "integer",
                        "example": 2
                    },
                    "expire_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Order": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "product_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "hold_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "qty": {
                        "type": "integer",
                        "example": 2
                    },
                    "amount_cents": {
                        "type": "integer",
                        "example": 19998
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "pending",
                            "paid",
                            "cancelled"
                        ],
                        "example": "pending"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Products",
            "description": "Product management endpoints"
        },
        {
            "name": "Holds",
            "description": "Stock hold management endpoints"
        },
        {
            "name": "Orders",
            "description": "Order management endpoints"
        },
        {
            "name": "Webhooks",
            "description": "Payment webhook endpoints"
        }
    ]
}